<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_rec_whilte_px10"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_common_title"
        android:text="标题"
        android:layout_width="540px"
        android:gravity="center"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_height="wrap_content"
        android:layout_marginTop="63px"
        android:textColor="@color/text_six_three"
        android:textSize="34px" />

    <TextView
        android:id="@+id/tv_common_content"
        android:layout_width="wrap_content"
        android:text="内容"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:textColor="@color/text_six_seven"
        android:textSize="28px" />
    <View style="@style/horizontal_line"
        android:layout_marginTop="60px"/>
    <LinearLayout
        android:id="@+id/ll_common_bottom"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_gravity="bottom"
        android:background="@drawable/circle_rec_bottom_whilte_px10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_verify_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_six_seven"
            android:textSize="34px" />

        <View
            android:id="@+id/tv_common_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_verify_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/app_color"
            android:textSize="34px" />
    </LinearLayout>
</LinearLayout>